{
  "name": "@bilbomd/backend",
  "version": "1.27.0",
  "description": "Backend server for BilboMD webapp",
  "main": "dist/server.js",
  "files": [
    "dist",
    "public",
    "views",
    "scripts"
  ],
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
    "lint": "eslint",
    "tsc": "tsc",
    "build": "npm-run-all clean copy-assets tsc",
    "build:ci": "npm-run-all clean copy-assets lint tsc",
    "dev": "concurrently \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "watch-ts": "tsc -w",
    "start": "npm run build && node dist/server.js",
    "test": "vitest --run --coverage",
    "test:watch": "vitest",
    "server": "nodemon ."
  },
  "dependencies": {
    "@bilbomd/mongodb-schema": "workspace:*",
    "@bilbomd/md-utils": "workspace:*",
    "@bull-board/api": "^6.13.0",
    "@bull-board/express": "^6.13.0",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.12.2",
    "bullmq": "^5.61.0",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dotenv": "^17.2.3",
    "eslint-plugin-jest": "^29.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-winston": "^4.2.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.19.1",
    "mongoose-to-swagger": "^1.5.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "nodemailer-express-handlebars": "^7.0.0",
    "openid-client": "~6.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.8.1",
    "yup": "^1.7.1"
  }
}
