{
  "name": "@bilbomd/scoper",
  "description": "A worker app to process BilboMD SCOPER jobs from BullMQ queue",
  "version": "1.5.0",
  "main": "build/scoper.js",
  "files": [
    "build",
    "scripts"
  ],
  "type": "module",
  "author": {
    "name": "Scott Classen",
    "email": "sclassen@lbl.gov"
  },
  "contributors": [
    {
      "name": "Edan Patt"
    },
    {
      "name": "Michal Hammel"
    },
    {
      "name": "Dina Schneidman"
    }
  ],
  "scripts": {
    "clean": "rimraf build/*",
    "build": "npm-run-all clean copy-assets tsc",
    "build:ci": "npm-run-all clean copy-assets lint tsc",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./build",
    "start": "npm run build && node build/scoper.js",
    "dev": "nodemon --watch src --ext ts,ejs --verbose --exec npm run start",
    "lint": "eslint",
    "tsc": "tsc"
  },
  "dependencies": {
    "@bilbomd/mongodb-schema": "workspace:*",
    "bullmq": "^5.61.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.19.2",
    "nodemailer": "^7.0.9",
    "nodemailer-express-handlebars": "^7.0.0",
    "nodemon": "^3.1.10",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "_moduleAliases": {
    "@services": "build/services",
    "@models": "build/models",
    "@helpers": "build/helpers"
  }
}
