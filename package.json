{
  "name": "bilbomd-scoper",
  "version": "1.0.3",
  "description": "A worker app to process BilboMD SCOPER jobs from BullMQ queue",
  "keywords": [],
  "author": "Scott Classen",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "clean": "rimraf build/*",
    "build": "npm-run-all clean copy-assets lint tsc",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./build",
    "start": "npm run build && node build/scoper.js",
    "dev": "tsc-watch --noClear --onSuccess \"node build/scoper.js\"",
    "lint": "eslint . --ext .ts",
    "tsc": "tsc"
  },
  "dependencies": {
    "bullmq": "^5.1.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "mongoose": "^8.1.1",
    "nodemailer": "^6.9.8",
    "nodemailer-express-handlebars": "^6.1.0",
    "nodemon": "^3.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.10",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
