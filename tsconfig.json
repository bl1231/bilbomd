{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
